@model IEnumerable<Library.Frontend.Models.UserViewModel>?

<h2>Users</h2>
<p>
    <a asp-action="Register" class="btn btn-success">Register New User</a>
</p>
<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Username</th>
            <th>Email</th>
            <th class="text-end">Actions</th>
        </tr>
    </thead>
    <tbody>
        @{
            var list = Model ?? Enumerable.Empty<Library.Frontend.Models.UserViewModel>();
        }
        @foreach (var u in list)
        {
            <tr>
                <td>@u.Id</td>
                <td>@u.Username</td>
                <td>@u.Email</td>
                <td class="text-end">
                    <a asp-action="Details" asp-route-id="@u.Id" class="btn btn-sm btn-info me-1">Details</a>
                    <a asp-action="Delete" asp-route-id="@u.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
        @if (!list.Any())
        {
            <tr>
                <td colspan="4" class="text-center">No users found.</td>
            </tr>
        }
    </tbody>
</table>
