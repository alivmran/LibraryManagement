@model Library.Frontend.Models.BookViewModel

<h2>Delete Book</h2>

<div class="card border-danger mx-auto" style="max-width: 500px;">
    <div class="card-body">
        <h5 class="card-title text-danger">@Model.Title</h5>
        <dl class="row">
            <dt class="col-sm-3">ISBN</dt>
            <dd class="col-sm-9">@Model.ISBN</dd>
            <dt class="col-sm-3">Author ID</dt>
            <dd class="col-sm-9">@Model.AuthorId</dd>
        </dl>
        <p class="mt-3">Are you sure you want to delete this book?</p>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
        </form>
    </div>
</div>
