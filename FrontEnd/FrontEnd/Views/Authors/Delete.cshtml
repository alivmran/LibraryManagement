@model Library.Frontend.Models.AuthorViewModel

<h2>Delete Author</h2>

<div class="card border-danger mx-auto" style="max-width: 500px;">
    <div class="card-body">
        <h5 class="card-title text-danger">Delete Author</h5>
        <p>Are you sure you want to delete <strong>@Model.Name</strong>?</p>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
        </form>
    </div>
</div>
